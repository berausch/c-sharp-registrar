<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">
    <title>All Departments</title>
  </head>
  <body>
    <div class="container">
    @if(@Model.Count == 0)
    {
      <p>No Departments have been registered yet.</p>
    }
    else
    {
      <ul>
      @foreach(var department in Model)
      {
        <li><a href="/departments/@department.GetId()">@department.GetName()</a></li>
      }
    </ul>
    }
    <br>
      <h4>Add a new Department</h4>
      <form class="form-group" action="/departments" method="post">
        <label for="department-name">Enter Department's Name:</label>
        <input type="text" name="department-name" required>
        <label for="department-code">Enter Department's Code:</label>
        <input type="text" name="department-code" maxlength="3" required>
        <button class="btn" type="submit" name="button">Submit</button>
      </form>
      <a href="/">Return Home</a> |
      <a href="/students">View all Students</a> |
      <a href="/courses">View all Courses</a>|
      <a href="/departments">View all Departments.</a>
    </div>
  </body>
</html>
